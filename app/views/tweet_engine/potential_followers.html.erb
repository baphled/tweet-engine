<% unless @potential_followers.empty? %>
<h2>Potential Followers</h2>
<ul id="potential-followers">
  <%= form_tag(:action => "follow") do %>
    <% @potential_followers.each do |user| %>
    
  <li>
    <%= label_tag "followers[#{user.screen_name}]", "#{user.screen_name}" %><%= check_box_tag "followers[#{user.screen_name}]", user.screen_name %>
  </li>
    <% end -%>
    
    <%= submit_tag "Follow tweeple", :disable_with => 'Follow tweeple...' %>
  <% end -%>
</ul>
<% end %>