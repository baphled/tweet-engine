<p>
  Hi <%= TweetEngine.whats_my.user.screen_name %>, this is your TweetEngine.<br/>
  Your account was created at: <%= TweetEngine.whats_my.user.created_at %>
</p>

<div id="tweet-stats">
<% if TweetEngine.config['search'] %>
  <p>
    Auto-searching for <%= TweetEngine.config['keywords'] %>
  </p>
<% end %>
  
  <p>
    You currently have <%= TweetEngine.whats_my.user.followers_count %> <%= link_to "followers", tweet_engine_followers_path %><br />
    You are <%= link_to "following", tweet_engine_following_path %> <%= TweetEngine.whats_my.user.friends_count %> tweeple<br />
  </p>
  
  <p>Your last tweet was: <%= TweetEngine.whats_my.user.status.text %> @ <%= TweetEngine.whats_my.user.status.created_at%></p>
  
  Number of found <%= link_to "potential followers", tweet_engine_potential_followers_path %> <%= TweetEngine::SearchResult.all.count %><br/>
</div>

<div id="tweet-engine-search">
  <div class="search">
    <%= form_tag(tweet_engine_search_path, :method => :get) do |f| %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>

  <div class="results">
    <% if @results.present? %>
      <%= form_tag(tweet_engine_follow_path) do |f| %>
        Tweeple talking about '<%= @term %>':<br />
        <ul>
        <% @results.each_with_index do |tweeple, index| %>
          <li>
            <%= label_tag "followers[#{index}]", tweeple.from_user %><%= check_box_tag "followers[#{index}]", tweeple.from_user %><br />
            <%= tweeple.text %>
          </li>
        <% end %>
        </ul>
        <%= submit_tag("Follow") %>
      <% end %>
    <% end %>
  </div>
</div>

<div id="tweet-stack">
<% if @tweet_stack.empty? %>
    No tweets stacked<br />
<% else%>
  <h3>Stacked tweets</h3>
  <ul>
  <% @tweet_stack.each do |tweet| %>
    <li><%= tweet.message %> - 
      <% if not tweet.delivered %>
      Sending at <%= tweet.sending_at.to_s %>
      <% if tweet.repeat %>
      Repeated every <%= tweet.every.to_s %>
      <% end %>
      <div class="tweet-menu">
        <%= link_to "Edit", edit_tweet_engine_tweet_path(:id => tweet.id) %><br/>
        <%= link_to "Cancel", tweet_engine_tweet_path(:id => tweet.id), :method => :delete, :confirm => "Are you sure you want to delete this entry?" %>
      </div>
      <% else %>
      Sent at <%= tweet.sending_at %>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
</div>

<div id="schedule-tweet">
  <%= form_for @stack, :url => tweet_engine_tweet_index_path, :method => :post do |f| %>
    <%= render :partial => 'shared/tweet_form', :locals => {:f => f} %>
  <% end %>
</div>
