<div id="tweet-stack">
<% if tweet_stack.empty? %>
    No tweets stacked<br />
<% else%>
  <h3>Stacked tweets</h3>
  <p>
    <%= pluralize tweet_stack.count, "message stacked", "messages stacked" %>
  </p>
  <ul>
  <% tweet_stack.each do |tweet| %>
    <li>
      <section>
        <%= tweet.message %><br/>
        <% if not tweet.delivered %>
        Sending in <%= time_ago_in_words tweet.sending_at %>
        <% if tweet.repeat %>
        this will be repeated every <%= tweet.every.to_s %>
        <% end %>
        <% else %>
        this was sent at <%= time_ago_in_words tweet.sending_at %>
        <% end %>
      </section>
      <menu class="tweet-menu">
        <%= link_to "Edit", edit_tweet_engine_tweet_path(:id => tweet.id) %>
        <%= link_to "Cancel", tweet_engine_tweet_path(:id => tweet.id), :method => :delete, :confirm => "Are you sure you want to delete this entry?" %>
      </menu>
    </li>
  <% end %>
  </ul>
<% end %>
</div>
