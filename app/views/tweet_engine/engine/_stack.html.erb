<div id="tweet-stack">
<% if tweet_stack.empty? %>
    No tweets stacked<br />
<% else%>
  <h3>Stacked tweets</h3>
  <ul>
  <% tweet_stack.each do |tweet| %>
    <li><%= tweet.message %> - 
      <% if not tweet.delivered %>
      Sending at <%= tweet.sending_at.to_s %>
      <% if tweet.repeat %>
      Repeated every <%= tweet.every.to_s %>
      <% end %>
      <div class="tweet-menu">
        <%= link_to "Edit", edit_tweet_engine_tweet_path(:id => tweet.id) %><br/>
        <%= link_to "Cancel", tweet_engine_tweet_path(:id => tweet.id), :method => :delete, :confirm => "Are you sure you want to delete this entry?" %>
      </div>
      <% else %>
      Sent at <%= tweet.sending_at %>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
</div>
