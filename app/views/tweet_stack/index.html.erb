<h2>Tweet stack</h2>

<%= form_tag(tweet_search_phrase_path, :method => :get) do |f| %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<%= form_tag(tweet_follow_path) do |f| %>
  <% if @results.present? %>
    Tweeple talking about '<%= @term %>':<br />
    <ul>
    <% @results.each_with_index do |name, index| %>
      <li><%= label_tag "tweet_stack[#{index}]", name %><%= check_box "tweet_stack", index, {}, name %></li>
    <% end %>
    </ul>
  <% end %>
  <%= submit_tag("Follow") %>
<% end %>
